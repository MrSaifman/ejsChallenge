<%- include("partials/header"); %>
<body>
    <h1>Home</h1>
    <p><%=content%></p>
        
    <% posts.forEach(post => { %>
        <h1><%= post.title %></h1>
        <% if(post.content.length < 100) { %>
            <p><%= post.content %></p>
        <% } else { %>
            <p>
                <%= post.content.substring(0, 100) + "..."; %>
                <a href="/posts/<%= post.title %>">Read More</a>
            </p>
        <% }; %>
    <% }); %>
    
</body>
<%- include("partials/footer"); %>